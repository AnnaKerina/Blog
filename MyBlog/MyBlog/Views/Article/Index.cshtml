@{
    ViewBag.Title = "Index";
}
@model MyBlog.Models.ArticleModel
<div class="article">
          <h2><span>New Post</span></h2>
          <div class="clr"></div>
          <form action="@Url.Action("Index", "Article")" method="post" enctype="multipart/form-data">
            <ol>
                <li>
                <label for="email">Add Image(required)</label>
                @Html.TextBoxFor(m => m.Title, new { type="text" })
              </li>
              <li>
                <label for="name">Title (required)</label>
                @Html.TextAreaFor(m => m.Body, new { placeholder = "Your comment", @class="text" })
              </li>
              <li>
                <label for="email">Add Image(required)</label>
                @Html.TextBoxFor(m => m.Path, new { type="text" })
              </li>
              
            </ol>
          </form>
        </div>